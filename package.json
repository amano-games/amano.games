    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": ">=10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.13.0",
